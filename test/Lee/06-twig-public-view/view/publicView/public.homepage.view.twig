{% extends "template.view.html.twig" %}

{% block content %}
{{ parent() }}
  {# {{ dump(categories) }} Comme d'hab, j'aime utiliser var_dump ou ses cousins  #}
    {{ dump(articles) }}
    <section class="section pb-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-5">
                    <h2 class="h5 section-title">Le Choix de l'Éditeur</h2>
                    <article class="card">
                        <div class="post-slider slider-sm">
                            <img src="assets/theme/images/post/post-1.jpg" class="card-img-top" alt="post-thumb">
                        </div>
                    {% for art in articles %}
                        <div class="card-body">
                            <h3 class="h4 mb-3"><a class="post-title" href="?route=article&select={{ art.getArticleSlug }}">{{ art.getArticleTitle }}</a></h3>
                            <ul class="card-meta list-inline">
                                <li class="list-inline-item">
                                    <a href="author-single.html" class="card-meta-author">
                                        <img src="assets/theme/images/john-doe.jpg">
                                        <span>{{ art.getUser().getUserFullName() }}</span>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <i class="ti-timer"></i>2 Min To Read
                                </li>
                                <li class="list-inline-item">
                                    <i class="ti-calendar"></i>{{ art.getArticleDatePublish }}
                                </li>
                                <li class="list-inline-item">
                                    <ul class="card-meta-tag list-inline">
                                        <li class="list-inline-item"><a href="tags.html">Color</a></li>
                                        <li class="list-inline-item"><a href="tags.html">Recipe</a></li>
                                        <li class="list-inline-item"><a href="tags.html">Fish</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <p>{{ art.getArticleText | slice(0, 75) ~ '...' }}</p>
                            <a href="?route=article&select={{ art.getArticleSlug }}" class="btn btn-outline-primary">En Savoir Plus</a>
                        </div>
                        {% endfor %}
                    </article>
                </div>


                <div class="col-lg-4 mb-5">
                    <h2 class="h5 section-title">Catégories Tendances</h2>
{% for category in categories %}
                    <article class="card mb-2">
                        <div class="card-body d-flex">
                            <img class="card-img-sm" src="assets/theme/images/post/post-{{ category.getCategoryId }}.jpg">
                            <div class="ml-3">
                                <h4><a href="?route=category&select={{ category.getCategorySlug }}" class="post-title">{{ category.getCategoryName }}</a></h4>
                                <ul class="card-meta list-inline mb-0">
                                    <li class="list-inline-item mb-0">
                                        {{ category.getCategoryDescription | slice(0, 82) }}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </article>
{% endfor %}
                </div>


                <div class="col-lg-4 mb-5">
                    <h2 class="h5 section-title">Poste Populaire</h2>
{% for pop in popular %}
                    <article class="card">
                        <div class="post-slider slider-sm">
                            <img src="assets/theme/images/post/post-5.jpg" class="card-img-top" alt="post-thumb">
                        </div>
                        <div class="card-body">
                            <h3 class="h4 mb-3"><a class="post-title" href="?route=article&select={{ pop.getArticleSlug }}">{{ pop.getArticleTitle }}</a></h3>
                            <ul class="card-meta list-inline">
                                <li class="list-inline-item">
                                    <a href="author-single.html" class="card-meta-author">
                                        <img src="assets/theme/images/kate-stone.jpg" alt="Kate Stone">
                                        <span>{{ pop.getUser().getUserFullName() }}</span>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <i class="ti-timer"></i>2 Min To Read
                                </li>
                                <li class="list-inline-item">
                                    <i class="ti-calendar"></i>14 jan, 2020
                                </li>
                                <li class="list-inline-item">
                                    <ul class="card-meta-tag list-inline">
                                        <li class="list-inline-item"><a href="tags.html">City</a></li>
                                        <li class="list-inline-item"><a href="tags.html">Food</a></li>
                                        <li class="list-inline-item"><a href="tags.html">Taste</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <p>{{ pop.getArticleText | slice(0, 75) ~ '...' }}</p>
                            <a href="?route=article&select={{ art.getArticleSlug }}" class="btn btn-outline-primary">En Savoir Plus</a>
                        </div>
                    </article>
                    {% endfor %}
                </div>
                <div class="col-12">
                    <div class="border-bottom border-default"></div>
                </div>
            </div>
        </div>
    </section>
{% endblock %} {# end content #}